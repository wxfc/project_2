<h1><%= house["number_street"] %> <%= house["suburb"] %>, <%= house["postcode"] %></h1>

<img src="<%= house["image_url"] %>" alt="">

<h3><%= house["agent"] %></h3>


<% if logged_in? %>
    <p><%= house["review"] %></p>
    <a href="/houses/<%= house["id"] %>/update"  id="linky">Update Review</a>
    <form action="/houses/<%= house["id"] %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>Delete Review</button>
    </form>
<% end %>

